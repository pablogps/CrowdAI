<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Scripts/heartBeat.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "HomePage", "Candidates", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Browse", "ShowSavedCandidates", "Candidates")</li>
                    <li>@Html.ActionLink("About this site", "About", "Home")</li>
                    <li>@Html.ActionLink("About us", "Contact", "Home")</li>
                </ul>
                <!--We don't need registration after all!-->
                <!--@@Html.Partial("_LoginPartial")-->
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="jumbotron">
            @RenderBody()
            <hr />
        </div>
        <footer>
            <p>2018—Pablo González de Prado Salas</p>
            <!--<p>@@DateTime.Now.Year—Pablo González de Prado Salas</p>-->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--The client will send a periodic signal so we can know which users have disconnected (heartbeat)-->
    <!--<script type="text/javascript">
            LaunchHeartBeat(' *at* Url.Action("ReceiveHeartbeat", "Auxiliary")');
    </script>-->
</body>
</html >
